# üîê Security Configuration Variables
# Copy this file to .env and fill in the values

# ============================================
# JWT & Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# ============================================
# Encryption Keys (32 characters minimum)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# ============================================
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-me
ENCRYPTION_IV=your-16-character-iv-here-change-me

# ============================================
# Rate Limiting (in requests per time window)
# ============================================
GLOBAL_RATE_LIMIT=100
GLOBAL_RATE_LIMIT_WINDOW=900000
AUTH_RATE_LIMIT=5
AUTH_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT=30
API_RATE_LIMIT_WINDOW=60000

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://174.129.111.162:3000,http://174.129.111.162:3001
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# ============================================
# Cookie Security
# ============================================
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict
COOKIE_MAX_AGE=86400000

# ============================================
# Session Configuration
# ============================================
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=86400000

# ============================================
# Password Policy
# ============================================
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=true

# ============================================
# OTP Configuration
# ============================================
OTP_LENGTH=6
OTP_EXPIRY_MINUTES=15
OTP_RESEND_COOLDOWN=60

# ============================================
# Security Logging
# ============================================
LOG_SECURITY_EVENTS=true
LOG_FAILED_LOGINS=true
LOG_RATE_LIMIT_BREACHES=true
LOG_SUSPICIOUS_PATTERNS=true

# ============================================
# Blocked Credentials (demo purposes)
# ============================================
BLACKLIST_DOMAINS=
BLOCKED_EMAIL_PATTERNS=
BLACKLIST_IPS=

# ============================================
# Admin Configuration
# ============================================
ADMIN_EMAIL=admin@learn-grow.com
ADMIN_SECRET=your-admin-secret-key

# ============================================
# Email Verification
# ============================================
ENABLE_EMAIL_VERIFICATION=true
EMAIL_VERIFICATION_TOKEN_EXPIRY=24h

# ============================================
# Two-Factor Authentication (Optional)
# ============================================
ENABLE_2FA=false
2FA_METHOD=email

# ============================================
# API Key (for external integrations)
# ============================================
API_KEY_PREFIX=sk_
ENABLE_API_KEYS=false

# ============================================
# Audit Logging
# ============================================
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=90

# ============================================
# Security Headers
# ============================================
ENABLE_HELMET=true
CSP_REPORT_ONLY=false
CSP_REPORT_URI=https://your-domain.com/api/csp-report
